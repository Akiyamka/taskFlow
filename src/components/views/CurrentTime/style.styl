#timeNow
  position: absolute
  bottom: 0
  width: 40px
  height: 21px
  margin-left: 5px
  background: #ff0000
  border-radius: 4px 4px 0px 4px
  font-family: 'PT Root UI'
  font-size: 14px
  line-height: 18px
  text-align: center
  color: #ffffff

#lineNow
  position: absolute
  bottom: 0
  left: 13px
  width: 100%
  box-sizing: border-box
  border: 1px solid #ff0000

#currentTime
  position: absolute
  top: 0
  width: 100%
  max-width: 623px
  overflow: hidden
  z-index: 1
