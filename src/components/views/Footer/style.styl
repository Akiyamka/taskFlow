#footer {
  @media screen and (min-width: 540px) {
    background-color: transparent;
  }
}

#footer {
  flex: 0 0 auto;

  background-color: #fff;
  padding: 17px 0;

  h3 {
    margin: 0;

    font-family: 'Roboto';
    font-style: normal;
    font-weight: bold;
    font-size: 12px;
    line-height: 14px;
    text-align: center;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-align: center;

    color: rgba(0, 0, 0, 0.6);
  }
}

#footerIcon {
  color: #fd6161;
}
