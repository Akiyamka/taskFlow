fontMixin($family, $size, $lineHeight) {
  font-family: $family;
  font-size: $size;
  line-height: $lineHeight;
}

html,
body {
  display: flex;
  height: 100%;
  padding: 0;
  margin: 0;
  background: #e8f0f9;
  flex-direction: column;
}

button {
  padding: 6px 12px;
  fontMixin('PT Root UI', 14px, 18px);
  border: 0;
  border-radius: 2px;
  display: inline-block;
  font-weight: 500;
  background: transparent;
  min-width: 60px;
  &:focus {
    outline: none;
    box-shadow: 0 0 1px #516bf0, 0 0 1px 3px rgba(0, 126, 255, 0.16)
  }
}
